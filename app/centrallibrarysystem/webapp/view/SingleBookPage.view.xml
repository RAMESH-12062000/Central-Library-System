<mvc:View
    controllerName="com.app.centrallibrarysystem.controller.SingleBookPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="idPage"
        title="Book Details"
        binding="{/Books}"
    >
        <content>
            <!-- Book Details Section -->
            <Panel
                id="idPanel"
                headerText="Book Information"
            >
                <content>
                    <VBox id="idVBox">
                        <HBox id="idHBox">
                            <Image
                                id="idImage"
                                src="{BookImage}"
                                width="150px"
                                height="200px"
                            />
                            <VBox id="idVBox2" alignItems="Center">
                            <Label  
                                id="idLablelTitle"
                                text="Title:"
                                width="100px"
                            />
                            <Text
                                id="idTextLable"
                                text="{Title}"
                            />
                            <Label
                                id="idLableTitle"
                                text="Author:"
                                width="100px"
                            />
                            <Text
                                id="idTextAuthor"
                                text="{Author}"
                            />
                            <Label
                                id="idLableISBN"
                                text="ISBN:"
                                width="100px"
                            />
                            <Text
                                id="idTextISBN"
                                text="{ISBN}"
                            />
                        </VBox>
                        </HBox>
                    </VBox>
                </content>
            </Panel>

            <!-- Book Content Section -->
            <Panel
                id="idPanel2"
                headerText="About the Book"
            >
                <content>
                    <Label id="idLable" text="Book Description:"></Label>
                    <Text
                        id="idTextDescription"
                        text="{Description}"
                        wrapping="true"
                    />
                </content>
            </Panel>

            <!-- Action Buttons -->
            <HBox
                id="idHboxBtns"
                justifyContent="End"
                width="100%"
                class="sapUiSmallMarginTop"
            >
                <Button
                    id="idBtnReserve"
                    text="Reserve"
                    type="Accept"
                    press=".onReservePress"
                    class="Button-spacing2"
                />
                <Button
                    id="idRejectBtn"
                    text="Decline"
                    type="Reject"
                    press="onDeclinePress"
                />
            </HBox>
        </content>
    </Page>
</mvc:View>
