<mvc:View
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    controllerName="com.app.centrallibrarysystem.controller.Books"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <f:DynamicPage
        id="idBooksListPage"
        headerExpanded="true"
    >
        <f:title>
            <f:DynamicPageTitle id="idBooksListPageTitle">
                <f:heading>
                    <Title
                        id="idBooksPageHeadingTitle"
                        text="{i18n>title}"
                    />
                </f:heading>

                <f:expandedContent>
                    <Label
                        id="idBooksListPageECL"
                        text="Here You can see the All the BOOKS..!!"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="idBooksListPageESL"
                        text="Here You can see the All the BOOKS..!!"
                    />
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title
                        id="idBooksListPageEST"
                        text="Here You can see the All the BOOKS..!!"
                    />
                </f:snappedTitleOnMobile>
                <f:navigationActions>
                    <Button
                        id="idReservedBooksBtn"
                        text="Reserved Books"
                        type="Emphasized"
                        press="onReservedBooksBtn"
                    />
                    <Button
                        id="idActiveLoansBtn"
                        text="Actve Loans"
                        type="Attention"
                        press="onActiveLoansBtnPress"
                    />
                    <!-- <Button
                        id="idBtnDecline"
                        icon="sap-icon://decline"
                        type="Transparent"
                    /> -->
                    <Button
                        id="idBtnBack"
                        icon="sap-icon://undo"
                        type="Emphasized"
                        press="onBackBtnPress"
                    />
                    <Button
                        id="idBtnFullScreen"
                        icon="sap-icon://full-screen"
                        type="Transparent"
                    />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="idDynamicPageHeader"
                pinnable="true"
            >
                <HBox
                    id="idFilterHLayout"
                    alignContent="SpaceAround"
                    width="100vw"
                >
                    <VBox
                        id="idTitleFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idTitleFilterLabel"
                            text="Title:"
                        />
                        <MultiInput
                            id="idTitleFilterValue"
                            value=""
                        />
                    </VBox>

                    <VBox
                        id="idAuthorFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idAuthorFilterLabel"
                            text="Author:"
                        />
                        <MultiInput
                            id="idAuthorFilterValue"
                            value=""
                        />
                    </VBox>
                    <VBox
                        id="idISBNFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idISBNFilterLabel"
                            text="ISBN:"
                        />
                        <MultiInput
                            id="idISBNFilterValue"
                            value=""
                        />
                    </VBox>
                    <VBox
                        id="idGoButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idGoButtonLabel"
                            text=""
                        />
                        <Button
                            id="idGoButtonValue"
                            text="Go"
                            type="Emphasized"
                            press="onGoPress"
                        />
                    </VBox>
                    <VBox
                        id="idClearFilterButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idClearFilterButtonLabel"
                            text=""
                        />
                        <Button
                            id="idClearFilterButtonValue"
                            text="Clear Filter"
                            type="Emphasized"
                            press="onClearFilterPress"
                        />
                    </VBox>
                    <VBox
                        id="idUsersButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idUsersButtonLabel"
                            text=""
                        />
                        <Button
                            id="idUsersButtonValue"
                            text="Users"
                            type="Emphasized"
                            press="onUsersPress"
                        />
                    </VBox>
                    <ToolbarSpacer id="idToolBarSpacer" />
                </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="idBooksTable"
                alternateRowColors="true"
                items="{path:'/Books',  parameters : {
            $count : true
        }}"
                selectionChange="onSelectBook"
                mode="MultiSelect"
            >
                <headerToolbar>
                    <OverflowToolbar id="idBooksTableHeader">
                        <Title
                            id="idTableHeaderTitle"
                            text="Books:{/Books/$count}"
                        />
                        <ToolbarSpacer id="idTableHeaderSpacer" />
                        <Button
                            id="idIssueBooksButton"
                            text="Issue Book"
                            type="Accept"
                            press="onIssueBooksBtnPress"
                        />
                        <Button
                            id="idBtnCreate"
                            text="Add"
                            icon="sap-icon://add"
                            tooltip="Add a Book"
                            type="Success"
                            press="onCreateBtnPress"
                        />
                        <Button
                            id="idBtnDelete"
                            press="onCheckDelete"
                            icon="sap-icon://delete"
                            tooltip="Delete Record"
                            text="Delete"
                            type="Negative"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="idTitleCol">
                        <Title
                            id="idTitleColTitle"
                            text="Title"
                        />
                    </Column>
                    <Column id="idAuthorCol">
                        <Title
                            id="idAuthorColTitle"
                            text="Author"
                        />
                    </Column>
                    <Column id="idISBNCol">
                        <Title
                            id="idISBNColTitle"
                            text="ISBN"
                        />
                    </Column>
                    <Column id="idLanguageCol">
                        <Title
                            id="idLanguageColTitle"
                            text="Language"
                        />
                    </Column>
                    <Column id="idQuantityCol">
                        <Title
                            id="idQuantityColTitle"
                            text="Quantity"
                        />
                    </Column>
                    <Column id="idAvailabilityCol">
                        <Title
                            id="idAvailabilityColTitle"
                            text="Availability"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="idBooksTableColListItem"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="idTitleColValue"
                                text="{Title}"
                            />
                            <Text
                                id="idAuthorColValue"
                                text="{Author}"
                            />
                            <Text
                                id="idISBNNumberColValue"
                                text="{ISBN}"
                            />
                            <Text
                                id="idLanguageColValue"
                                text="{Language}"
                            />
                            <Text
                                id="idQuantityColValue"
                                text="{Quantity}"
                            />
                            <Text
                                id="idAvailabilityColValue"
                                text="{Availability}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
