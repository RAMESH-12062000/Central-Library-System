<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="idReservedBooksTable"
        resizable="true"
        draggable="true"
        contentWidth="85%"
        contentHeight="85%"
        title="Reserved Books"
    >
        <content>
            <Table
                id="idReservedBooks"
                inset="false"
                items="{/Reserved Books}"
            >
                <headerToolbar>
                    <Toolbar id="idToolBarReserved">
                        <Title
                            id="idTableReserved"
                            text="Reserved Books from Users:"
                        />
                        <ToolbarSpacer id="IdToolBarSpacer" />
                        <Button
                            id="idCloseBtnReservedBooks"
                            text="Close"
                            press="onCloseReservedBooks"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="idColumnHeadingUserID">
                        <Text
                            id="idColumnUserID"
                            text="User ID"
                        />
                    </Column>
                    <Column id="idColumnHeadingBookName">
                        <Text
                            id="idReservedBookName"
                            text="Book Name"
                        />
                    </Column>
                    <Column id="idColumnHeadingISBN">
                        <Text
                            id="idISBNNumber"
                            text="ISBN Number"
                        />
                    </Column>
                    <Column id="idColumnHeadingNotify">
                        <Text
                            id="idNotify"
                            text="Notification[Sent/Decline]"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="idColumnList">
                        <cells>
                            <Text
                                id="idUserId"
                                text="{UserID}"
                            />
                            <Text
                                id="idBookNameItem"
                                text="{Books/Title}"
                            />
                            <Text
                                id="idISBNItem"
                                text="{Books/ISBN}"
                            />
                            <Button
                                id="idNotifyButton"
                                icon="sap-icon://sent"
                                tooltip="Notification Sent"
                                text="Sent"
                                type="Success"
                                press="onNotificationSentPress"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>