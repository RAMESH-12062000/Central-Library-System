<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="dialog"
        resizable="false"
        draggable="true"
        contentWidth="30%"
        title="Register Your Details:"
    >
        <beginButton>
            <Button
                id="idRegisterUserButton"
                text="Submit"
                press="onSubmitPress"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelRegisterUserButton"
                text="Cancel Register"
                press="onCloseRegisterSubmitDialog"
                type="Negative"
            />
        </endButton>

        <content>
            <form:SimpleForm
                id="idRegisterUserDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idLableName"
                    text="Name"
                />
                <Input id="idNewUserNameInput" value="{localModel2>/Name}" />
                <Label
                    id="idLableEmail"
                    text="Email"
                />
                <Input id="idEmailInput" value="{localModel2>/Email}" />
                <Label
                    id="idLableUserName"
                    text="User Name"
                />
                <Input id="idUserNameInput" value="{localModel2>/Username}" />
                <!-- <Label
                    id="idLablePhoneNumber"
                    text="Phone Number"
                />
                <Input id="idPhoneNumberInput" value="{localModel>/phonenumber}" /> -->

                <Label
                    id="idLableCreatePassword"
                    text="Create Password"
                />
                <Input
                    id="idCreatePasswordInput" value="{localModel2>/Password}"/>
                <Label
                    id="idLableUserType"
                    text="User Type"
                />
                <Input
                    id="idInputuserType"
                    value="{localModel2>/userType}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
