<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="idActiveLoansTable"
        resizable="true"
        draggable="true"
        contentWidth="85%"
        contentHeight="85%"
        title="Active Loans"
    >
        <content>
            <Table
                id="myTable"
                inset="false"
                items="{/BookLoans}"
            >
                <headerToolbar>
                    <Toolbar id="idToolBar">
                        <Title
                            id="idTableHeader"
                            text="Product Table"
                        />
                        <ToolbarSpacer id="idSpacer" />
                        <Button
                            id="idAddButton"
                            text="Add"
                            press="onAdd"
                        />
                        <Button
                            id="idCloseButton"
                            text="close"
                            press="onCloseActiveLoans"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="idcol1">
                        <Text
                            id="idColUserID"
                            text="User ID"
                        />
                    </Column>
                    <Column id="idcol2">
                        <Text
                            id="idUserName"
                            text="Name"
                        />
                    </Column>
                    <Column id="idcol3">
                        <Text
                            id="idBookName"
                            text="BookName"
                        />
                    </Column>
                    <Column id="idcol4">
                        <Text
                            id="idDueDate"
                            text="Due Date"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="idColListItems">
                        <cells>
                            <Text
                                id="idUserIdValue"
                                text="{UserID}"
                            />
                            <Text
                                id="idNameValue"
                                text="{Name}"
                            />
                            <Text
                                id="idBookNameValue"
                                text="{Book/Title}"
                            />
                            <Text
                                id="idDueDateValue"
                                text="{ReturnDate}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>